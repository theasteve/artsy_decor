
<div class="container mx-auto my-5" style="min-height: 900px">
  <div class="font-sans leading-tight min-h-screen bg-grey-lighter">
    <div class="max-auto mx-auto bg-white rounded-lg overflow-hidden shadow-lg">
      <div class="bg-cover h-40"></div>
      <div class="border-b px-4 pb-6">
          <div class="text-center sm:text-left sm:flex mb-4">
            <% if @user.avatar.attached? %>
              <%= cl_image_tag @user.avatar.key, format: :jpg, class: "h-32 w-32 rounded-full border-4 border-white -mt-16 mr-4 object-cover"%>
            <% end %>
              <div class="py-2">
                  <h3 class="font-bold text-2xl mb-1"><%= @user.full_name %></h3>
                  <div class="inline-flex text-grey-dark sm:flex items-center">
                      <svg class="h-5 w-5 text-grey mr-1" fill="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24"><path class="heroicon-ui" d="M5.64 16.36a9 9 0 1 1 12.72 0l-5.65 5.66a1 1 0 0 1-1.42 0l-5.65-5.66zm11.31-1.41a7 7 0 1 0-9.9 0L12 19.9l4.95-4.95zM12 14a4 4 0 1 1 0-8 4 4 0 0 1 0 8zm0-2a2 2 0 1 0 0-4 2 2 0 0 0 0 4z"/></svg>
                      <%= @user.city %>
                  </div>
              </div>
          </div>
      </div>
      <div class="px-4 py-4" style="min-height: 500px;">
          <div class="flex items-center text-grey-darker mb-4 font-mono text-xl leading-loose break-normal">
              <%= @user.bio %>
          </div>
      </div>
    </div>
  </div>
</div>
