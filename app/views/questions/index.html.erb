<div class="container mx-auto flex items-center flex-wrap pt-4 pb-12">
  <div class="w-full container mx-auto flex flex-wrap items-center justify-between mt-0 px-2 py-3">
    <p class="font-mono text-3xl text-gray-800 text-center font-bold">
       Community
    </p>
    <%= link_to "Ask ArtsySpace", new_question_path, class: "bg-teal-500 hover:bg-teal-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <div>
    <ul>
      <% @questions.each do |question| %>
        <li class="comments-li my-6">
          <div>
            <%= link_to user_path(question.user) do %>
              <%= image_tag question.user.avatar, class: 'block lg:inline-block h-12 w-12 rounded-full mx-auto object-cover'%>
            <% end %>
            <div class="text-base inline-block ml-2">
              <%= link_to question_path(question) do %> 
                <p class="font-mono text-xl text-gray-800 text-center font-bold hover:bg-teal-500">
                  <%= question.title %>
                </p>
              <% end %>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
