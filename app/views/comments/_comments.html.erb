<div class="container mx-auto flex justify-center">
  <ul>
    <% commentable.comments.each do |comment| %>
      <li class="comments-li my-6">
        <div class="flex" data-turbolinks-action="replace">
          <%= link_to user_path(comment.user) do %>
            <%= cl_image_tag comment.user.avatar.key, format: :jpg, class: 'block lg:inline-block h-12 w-12 rounded-full mx-auto object-cover'%>
          <% end %>
          <div class="text-base inline-block ml-2 flex-1">
            <p><%= comment.content %></p>
          </div>

          <% if comment.user == current_user %>
            <div class="mx-auto float-right">
              <%= link_to 'Delete', "/questions/#{commentable.id}/comments/#{comment.id}", method: :delete, data: { confirm: 'Are you certain you want to delete this post?' } %>
            </div>
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>
</div>

