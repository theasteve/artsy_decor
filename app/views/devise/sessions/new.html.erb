<!-- Container -->
<div class="container mx-auto" style="min-height: 900px;">
  <div class="flex justify-center px-6 my-12">
      <!-- Row -->
      <div class="w-full xl:w-4/4 lg:w-11/12 flex" style="height: 816px;">
        <!-- Col -->
        <div class="w-full h-auto bg-gray-400 hidden lg:block lg:w-1/2 bg-cover rounded-l-lg" style="background-image: url('https://source.unsplash.com/Qf9d5VhGcCE');background-size: cover;"></div>
        <!-- Col -->
        <div class="w-full lg:w-1/2 bg-white p-5 rounded-lg lg:rounded-l-none">
          <h3 class="pt-4 text-2xl text-center">Welcome Back!</h3>
          <%= form_for(resource, as: resource_name,
                       html: { class: "px-8 pt-6 pb-8 mb-4 bg-white rounded" },
                       url: session_path(resource_name)) do |f| %>
          <div class="mb4">
            <%= f.label :email, class: "block mb-2 text-sm font-bold text-gray-700", for: "email"  %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", type: "text", placeholder: "email",
                                          class: "w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" %>
          </div>

          <div class="mb-4">
            <%= f.label :password, class: "block mb-2 text-sm font-bold text-gray-700", for: "password" %>
            <%= f.password_field :password, class: "w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border border-red-500 rounded shadow appearance-none focus:outline-none focus:shadow-outline", type: "password", placeholder: "***************" %>
            <p class="text-xs italic text-red-500">Please choose a password.</p>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="mb-4">
              <%= f.check_box :remember_me, class: "mr-2 leading-tight", type: "checkbox", id: "checkbox_id" %>
              <%= f.label :remember_me, class: "text-sm", for: "checkbox_id" %>
            </div>
          <% end %>

          <div class="mb-6 text-center">
            <%= f.submit "Log in", class: "w-full px-4 py-2 font-bold text-white bg-teal-500 rounded-full hover:bg-teal-700 focus:outline-none focus:shadow-outline" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>

        </div>
      </div>
  </div>
</div>



