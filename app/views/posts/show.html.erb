<div style="min-height: 900px">
<div class="container mx-auto bg-white rounded-lg shadow-lg mt-10 mb-10">
  <div>
    <div class="container mx-auto">
      <div class="flex flex-wrap">
        <div class="w-full md:w-8/12">
          <%= cl_image_tag @post.image.key, format: :jpg %>
        </div>
        <div class="w-full md:w-4/12 px-4 mr-auto ml-auto">
          <p class="text-sm text-gray-600 flex items-center">
           <svg class="fill-current text-gray-500 w-3 h-3 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 22 22">
             <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/><path d="M0 0h24v24H0z" fill="none"/>
           </svg>
           <%= @post.location %>
         </p>
          <h1 class="text-5xl font-black-darker font-black">  <%= @post.title %></h1>
          <div class="text-grey-darker py-4 text-lg leading-normal overflow-scroll" style="min-height: 484px;">
            <%= @post.description %>
          </div>
            <div class="flex items-center">
              <%= link_to user_path(@post.user) do %>
                <%= user_avatar(@post.user) %>
              <% end %>

              <div class="text-sm">
                <p class="text-gray-900 leading-none"><%= @post.user.full_name %></p>
                <p class="text-gray-600"><%= @post.created_at.to_date %></p>
              </div>
            </div>
        </div>
        <div class="px-4">
          <% if @post.user == current_user %>
            <%= link_to edit_post_path(@post) do %>
              <i data-eva="edit-outline" data-eva-animation="zoom" data-eva-fill="#38b2ac" title="edit"></i>
            <% end %>
            <%= link_to @post, method: :delete, data: { confirm: 'Are you certain you want to delete this post?' } do %>
              <i data-eva="trash-2-outline" data-eva-animation="zoom" data-eva-fill="red" title="delete"></i>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
