<div class="container mx-auto flex content-start flex-wrap justify-start my-8" style="min-height: 900px">
  <% @posts.each do |post| %>
      <div class="w-1/3 p-2 flex">
          <div class="max-w-sm rounded overflow-hidden shadow-lg flex flex-col justify-between">
            <%= link_to post_path(post) do %>
              <%= cl_image_tag(post.image.key, :format => :jpg , class: "card-home__img object-cover") %>
            <% end %>
              <div class="px-6 py-4">
                <div class="font-bold text-xl mb-2"><%= post.title %></div>
              </div>
              <div class="flex items-center m-4">
              <%= link_to user_path(post.user) do %>
                <%= user_avatar(post.user) %>
              <% end %>
                <div class="ml-2 text-sm">
                  <p class="text-gray-900 leading-none"><%= post.user.full_name %></p>
                  <p class="text-gray-600"><%= post.location %></p>
                </div>
              </div>
          </div>
      </div>
  <% end %>
</div>
